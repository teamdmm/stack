{
  "mappings": {
    "_default_": {
      "_all": {
        "enabled": true,
        "norms": {
          "enabled": false
        }
      },
      "dynamic_templates": [
        {
          "additional_data": {
            "mapping": {
              "doc_values": true,
              "ignore_above": 1024,
              "index": "not_analyzed",
              "type": "{dynamic_type}"
            },
            "match": "*"
          }
        }
      ],
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "hostname" : {
          "type": "string",
          "index": "not_analyzed"
        },
        "serviceName" : {
          "type": "string",
          "index": "not_analyzed"
        },
        "level" : {
          "type": "string",
          "index": "not_analyzed"
        },
        "class" : {
          "type": "string",
          "index": "not_analyzed"
        },
        "thread" : {
          "type": "string",
          "index": "not_analyzed"
        },
        "correlationID" : {
          "type": "string",
          "index": "not_analyzed"
        }
      }
    }
  },
  "settings": {
    "index.refresh_interval": "5s"
  },
  "template": "filebeat-*"
}
